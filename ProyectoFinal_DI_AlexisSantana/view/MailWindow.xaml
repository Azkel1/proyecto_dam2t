<Window x:Class="ProyectoFinal_DI_AlexisSantana.view.MailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ventana de correo" Height="450" Width="800">
    <DockPanel Margin="15">
        <DockPanel DockPanel.Dock="Top" Margin="0 0 0 5">
            <Label Content="Para:" DockPanel.Dock="Left" Style="{StaticResource labelInfo}"/>
            <TextBox Name="Mail_Send_To"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="0 0 0 5">
            <Label Content="Asunto:" DockPanel.Dock="Left" Style="{StaticResource labelInfo}"/>
            <TextBox Name="Mail_Send_Subject"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Margin="0 5 0 0">
            <Button Content="Enviar" Click="SendMail"/>
        </DockPanel>
        <DockPanel>
            <TextBox Name="Mail_Send_Content"/>
        </DockPanel>
    </DockPanel>
</Window>
