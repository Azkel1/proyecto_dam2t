<Window x:Class="ProyectoFinal_DI_AlexisSantana.view.InfoCitaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinal_DI_AlexisSantana.view"
        mc:Ignorable="d"
        Title="Información de la cita" Height="364.195" Width="340.466">
    <Grid Style="{StaticResource gridInfo}">
        <StackPanel>
            <Label Content="Nombre del cliente:" Style="{StaticResource labelInfo}"/>
            <TextBlock Name="nombre_cliente"/>
            <Label Content="Fecha de la cita:" Style="{StaticResource labelInfo}"/>
            <TextBlock Name="fecha"/>
            <Label Content="Producto:" Style="{StaticResource labelInfo}"/>
            <TextBlock Name="producto"/>
            <Label Content="Descripción del producto:" Style="{StaticResource labelInfo}"/>
            <TextBlock Name="producto_desc"/>
        </StackPanel>
    </Grid>
</Window>
